  {
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.allay.root": {
      "initial_state" : "default",
			"states" : {
				"default" : {
          "animations" : [
            "base_pose"
          ],
					"transitions" : [
            { "move" : "q.modified_move_speed > 0.2 && !q.is_riding" },
            { "dead": "!q.is_alive" }
          ],
          "blend_transition": 0.4,
					"blend_via_shortest_path": true
        },
        "idle": {
          "on_entry": [ "v.roll = math.random_integer(1, 3);" ],
          "animations" : [
            { "idle1": "v.roll == 1 || (v.roll == 2 && (variable.is_holding_left || variable.is_holding_right))" },
            { "idle2": "v.roll == 2 && !variable.is_holding_left && !variable.is_holding_right" },
            { "idle3": "v.roll == 3" }
          ],
					"transitions" : [
            { "default" : "q.is_in_contact_with_water || q.any_animation_finished" },
            { "dead": "!q.is_alive" }
          ],
          "blend_transition": 0.2,
					"blend_via_shortest_path": true
        },
        "move": {
          "on_entry": [ "v.roll = math.random_integer(1, 5); v.timer = q.life_time;" ],
          "animations": [
            "move"
          ],
          "transitions": [
            { "default": "q.modified_move_speed <= 0.2" },
            { "idle": "q.life_time - v.timer >= 5.0" },
            { "dead": "!q.is_alive" }
          ],
          "blend_transition": 0.2,
					"blend_via_shortest_path": true
        },
        "dead": {
          "on_entry": [ "v.roll = math.random_integer(1, 3);" ],
          "animations": [
            { "dead1": "v.roll == 1" },
            { "dead2": "v.roll == 2" },
             { "dead2": "v.roll == 3" }
          ]
        }
			}
    }
  }
}
