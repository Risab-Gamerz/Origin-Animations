{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "minecraft:zombie_pigman",
      "min_engine_version": "1.8.0",
      "materials": { "default": "zombie" },
      "textures": {
        "default": "textures/entity/piglin/zombie_piglin"
      },
      "geometry": {
        "default": "geometry.piglin"
      },
      "scripts": {
        "scale": "q.life_time < 0.2 ? q.life_time * 5 : 1",
        "pre_animation": [
          "variable.tcos0 = (Math.cos(query.modified_distance_moved * 25.44666) * query.modified_move_speed) * 57.3;",
          "variable.tcos1 = (Math.cos(query.modified_distance_moved * 50.89333) * query.modified_move_speed) * 57.3;"
        ],
        "animate": [
          "root",
          { "look_at_target": "query.is_alive" },
          { "humanoid_big_head": "query.is_baby" },
          { "dead": "!query.is_alive" }
        ],
        "initialize": [
          "v.roll = math.random_integer(1, 5);",
          "v.attack_roll = 0;"
        ]
      },
      "animations": {
        "root": "controller.animation.pigman.root",
        "humanoid_big_head": "animation.humanoid.big_head",
        "look_at_target": "animation.common.look_at_target",
        "base_pose": "animation.zombie.base_pose",
        "riding.legs": "animation.humanoid.riding.legs",
        "idle1": "animation.drowned.idle1",
        "idle2": "animation.villager.zombie_idle2",
        "idle3": "animation.husk.idle3",
        "move_upper_body": "animation.zombie.move_upper_body",
        "move_upper_body_target1": "animation.zombie_piglin.move_upper_body_target1",
        "move_upper_body_target2": "animation.zombie_piglin.move_upper_body_target2",
        "move_upper_body_target3": "animation.zombie_piglin.move_upper_body_target3",
        "move_lower_body": "animation.piglin.move_lower_body",
        "attack1": "animation.zombie_piglin.attack1",
        "attack2": "animation.zombie_piglin.attack2",
        "attack3": "animation.zombie_piglin.attack3",
        "dead": "animation.custom_death",
        "dead1": "animation.zombie.dead1",
        "dead2": "animation.zombie.dead2",
        "dead3": "animation.zombie.dead3",
        "dead4": "animation.zombie.dead4"
      },
      "render_controllers": [ "controller.render.zombie_pigman" ],
      "spawn_egg": {
        "texture": "spawn_egg",
        "texture_index": 13
      },
      "enable_attachables": true
    }
  }
}