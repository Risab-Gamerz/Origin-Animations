{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "minecraft:zombie_villager_v2",
      "materials": {
        "default": "zombie_villager_v2",
        "masked": "zombie_villager_v2_masked"
      },
      "textures": {
        "default": "textures/entity/zombie_villager2/zombie-villager",

        // Biome Layer
        "desert": "textures/entity/zombie_villager2/biomes/biome-desert-zombie",
        "jungle": "textures/entity/zombie_villager2/biomes/biome-jungle-zombie",
        "plains": "textures/entity/zombie_villager2/biomes/biome-plains-zombie",
        "savanna": "textures/entity/zombie_villager2/biomes/biome-savanna-zombie",
        "snow": "textures/entity/zombie_villager2/biomes/biome-snow-zombie",
        "swamp": "textures/entity/zombie_villager2/biomes/biome-swamp-zombie",
        "taiga": "textures/entity/zombie_villager2/biomes/biome-taiga-zombie",

        // Profession Layer
        "armorer": "textures/entity/zombie_villager2/professions/armorer",
        "butcher": "textures/entity/zombie_villager2/professions/butcher",
        "cartographer": "textures/entity/zombie_villager2/professions/cartographer",
        "cleric": "textures/entity/zombie_villager2/professions/cleric",
        "farmer": "textures/entity/zombie_villager2/professions/farmer",
        "fisherman": "textures/entity/zombie_villager2/professions/fisherman",
        "fletcher": "textures/entity/zombie_villager2/professions/fletcher",
        "leatherworker": "textures/entity/zombie_villager2/professions/leatherworker",
        "librarian": "textures/entity/zombie_villager2/professions/librarian",
        "shepherd": "textures/entity/zombie_villager2/professions/shepherd",
        "tool_smith": "textures/entity/zombie_villager2/professions/toolsmith",
        "weapon_smith": "textures/entity/zombie_villager2/professions/weaponsmith",
        "stonemason": "textures/entity/zombie_villager2/professions/stonemason",
        "nitwit": "textures/entity/zombie_villager2/professions/nitwit"
      },
      "geometry": {
        "default": "geometry.zombie_villager_v2"
      },
      "scripts": {
        "scale": "q.life_time < 0.2 ? q.life_time * 5 : 1",
        "pre_animation": [
          "variable.num_professions = 14;",
          "variable.profession_index = ((query.variant < variable.num_professions) ? query.variant : 0);",
          "variable.tcos0 = (Math.cos(query.modified_distance_moved * 25.44666) * query.modified_move_speed) * 57.3;",
          "variable.tcos1 = (Math.cos(query.modified_distance_moved * 50.89333) * query.modified_move_speed) * 57.3;"
        ],
        "animate": [
          "root",
          { "look_at_target": "query.is_alive" },
          { "villager_big_head": "query.is_baby" },
          { "dead": "!query.is_alive" }
        ],
        "initialize": [
          "v.roll = math.random_integer(1, 5);",
          "v.attack_roll = math.random_integer(1, 3);"
        ]
      },
      "animations": {
        "root": "controller.animation.villager_zombie.root",
        "look_at_target": "animation.common.look_at_target",
        "villager_big_head": "animation.villager.baby_transform",
        "base_pose": "animation.villager.zombie_base_pose",
        "riding.legs": "animation.humanoid.riding.legs",
        "idle1": "animation.villager.zombie_idle1",
        "idle2": "animation.villager.zombie_idle2",
        "idle3": "animation.villager.zombie_idle3",
        "move_upper_body": "animation.villager.zombie_move_upper_body",
        "move_upper_body_target1": "animation.villager.zombie.move_upper_body_target1",
        "move_upper_body_target2": "animation.villager.zombie.move_upper_body_target2",
        "move_upper_body_target3": "animation.villager.zombie.move_upper_body_target3",
        "move_upper_body_target1_default": "animation.villager.zombie.move_upper_body_target1_default",
        "move_upper_body_target2_default": "animation.villager.zombie.move_upper_body_target2_default",
        "move_upper_body_target3_default": "animation.villager.zombie.move_upper_body_target3_default",
        "move_lower_body": "animation.villager.zombie_move_lower_body",
        "attack1": "animation.villager.zombie.attack1",
        "attack2": "animation.villager.zombie.attack2",
        "attack3": "animation.villager.zombie.attack3",
        "dead": "animation.custom_death",
        "dead1": "animation.villager.dead1",
        "dead2": "animation.villager.dead2",
        "dead3": "animation.villager.dead3",
        "dead4": "animation.villager.dead4"
      },
      "render_controllers": [
        "controller.render.zombie_villager_v2_base",
        "controller.render.zombie_villager_v2_masked"
      ],
      "enable_attachables": true,
      "spawn_egg": {
        "texture": "spawn_egg",
        "texture_index": 42
      }
    }
  }
}